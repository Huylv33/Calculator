<?xml version="1.0" encoding="utf-8"?>
<TableLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="7"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <TableRow android:layout_weight="2">
        <TextView
            android:id="@+id/text_view_result"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:background="#645D5B"
            android:gravity="end|bottom"
            android:text="@string/default_result"
            android:textColor="#FFFFFF"
            android:textSize="50sp" />
    </TableRow>
    <TableRow android:layout_weight="1">
        <TextView style="@style/CalculatorButton"
            android:text="AC"/>
        <ImageButton
            android:id="@+id/img_button_plus_minus"
            style="@style/CalculatorButton"
            android:src="@drawable/ic_plus_minus"
            />
        <ImageButton
            android:id="@+id/img_button_percentage"
            style="@style/CalculatorButton"
            android:src="@drawable/ic_percentage_discount"/>
        <ImageButton
            android:id="@+id/img_button_divide"
            style="@style/ColorfulCalculatorButton"
            android:src="@drawable/ic_divide" />
    </TableRow>
    <TableRow android:layout_weight="1">
        <TextView style="@style/CalculatorButton"
            android:id="@+id/text_view_num_7"
            android:text="7"/>

        <TextView
            android:id="@+id/text_view_num_8"
            style="@style/CalculatorButton"
            android:text="8" />

        <TextView
            android:id="@+id/text_view_num_9"
            style="@style/CalculatorButton"
            android:text="9" />

        <ImageButton
            android:id="@+id/img_button_multiply"
            style="@style/ColorfulCalculatorButton"
            android:src="@drawable/ic_multiply" />
    </TableRow >
    <TableRow android:layout_weight="1">

        <TextView
            android:id="@+id/text_view_num_4"
            style="@style/CalculatorButton"
            android:text="4" />

        <TextView
            android:id="@+id/text_view_num_5"
            style="@style/CalculatorButton"
            android:text="5" />

        <TextView
            android:id="@+id/text_view_num_6"
            style="@style/CalculatorButton"
            android:text="6" />

        <ImageButton
            android:id="@+id/img_button_minus"
            style="@style/ColorfulCalculatorButton"
            android:src="@drawable/ic_minus" />
    </TableRow>
    <TableRow android:layout_weight="1">

        <TextView
            android:id="@+id/text_view_num_1"
            style="@style/CalculatorButton"
            android:text="1" />

        <TextView
            android:id="@+id/text_view_num_2"
            style="@style/CalculatorButton"
            android:text="2" />

        <TextView
            android:id="@+id/text_view_num_3"
            style="@style/CalculatorButton"
            android:text="3" />

        <ImageButton
            android:id="@+id/img_buttton_plus"
            style="@style/ColorfulCalculatorButton"
            android:src="@drawable/ic_plus" />
    </TableRow>
    <TableRow android:layout_weight="1">

        <TextView
            android:id="@+id/text_view_num_0"
            style="@style/CalculatorButton"
            android:background="@drawable/button_border"
            android:text="0" />
        <TextView style="@style/CalculatorButton"/>

        <TextView
            android:id="@+id/text_view_dot"
            style="@style/CalculatorButton"
            android:text="." />

        <ImageButton
            android:id="@+id/img_button_equals"
            style="@style/ColorfulCalculatorButton"
            android:src="@drawable/ic_equal" />
    </TableRow>
</TableLayout>